Public Shared Function RenderToHtml(obj As T) As String
        If obj Is Nothing Then
            Return String.Empty
        End If

        Dim html As New StringBuilder()
        html.AppendLine("<table border='1'>")

        ' Render properties and values
        For Each property As PropertyInfo In GetType(T).GetProperties()
            html.AppendLine("<tr>")
            html.AppendFormat("<th>{0}</th>", property.Name)
            html.AppendFormat("<td>{0}</td>", RenderPropertyValue(property.GetValue(obj)))
            html.AppendLine("</tr>")
        Next

        html.AppendLine("</table>")
        Return html.ToString()
    End Function

    Private Shared Function RenderPropertyValue(value As Object) As String
        If value Is Nothing Then
            Return String.Empty
        End If

        Dim html As New StringBuilder()

        If value.GetType().IsClass AndAlso value.GetType() IsNot GetType(String) Then
            ' Handle nested objects recursively
            html.Append(RenderToHtml(value))
        ElseIf TypeOf value Is System.Collections.IEnumerable Then
            ' Handle collections (lists, arrays) of objects
            html.AppendLine("<ul>")
            For Each item As Object In DirectCast(value, System.Collections.IEnumerable)
                html.AppendLine("<li>")
                html.Append(RenderPropertyValue(item))
                html.AppendLine("</li>")
            Next
            html.AppendLine("</ul>")
        Else
            ' Render simple values directly
            html.Append(value)
        End If

        Return html.ToString()
    End Function
